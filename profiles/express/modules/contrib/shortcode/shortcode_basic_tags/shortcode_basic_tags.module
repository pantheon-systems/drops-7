 */
function shortcode_basic_tags_shortcode_clear($attrs, $text) {
  $attrs = shortcode_attrs(array(
      'class' => '',
      'style' => '',
      'id' => '',
      'type' => 'div',
    ),
    $attrs
  );

  $class = shortcode_add_class($attrs['class'], 'clearfix');

  switch ($attrs['type']) {
    case 's':
    case 'span':
      $type = 'span';
      break;

    case 'd':
    default:
      $type = 'div';
      break;
  }

  return theme('shortcode_clear', array(
    'text' => $text,
    'id' => $attrs['id'],
    'class' => $class,
    'type' => $type,
    'style' => $attrs['style'])
  );
}

