/**
 * Provides process callback for item Shortcode.
 */
function shortcode_basic_tags_shortcode_item($attrs, $text) {
  $attrs = shortcode_attrs(array(
      'class' => '',
      'style' => '',
      'id' => '',
      'type' => 'div',
    ),
    $attrs
  );

  switch ($attrs['type']) {
    case 's':
    case 'span':
      $type = 'span';
      break;

    case 'd':
    default:
      $type = 'div';
      break;
  }

  return theme('shortcode_item', array(
    'text' => $text,
    'id' => $attrs['id'],
    'class' => $attrs['class'],
    'type' => $type,
    'style' => $attrs['style'])
  );
}

