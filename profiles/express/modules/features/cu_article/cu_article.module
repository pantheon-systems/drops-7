    $node_nid = 'node/' . $nid;
    if ($term->field_tag_term_page_link[LANGUAGE_NONE][0]['url'] == $node_nid) {
      $term->field_tag_term_page_link[LANGUAGE_NONE][0]['url'] = '';
      taxonomy_term_save($term);
      drupal_set_message('The taxonomy term link has been removed.');
    }
