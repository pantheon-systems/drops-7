    // Display the newest first.
    $query->orderBy('sticky', 'DESC');
    $query->orderBy('created', 'DESC');
    $query->groupBy('n.nid');
    $nids = $query->execute()->fetchCol();
    $nodes = node_load_multiple($nids);
