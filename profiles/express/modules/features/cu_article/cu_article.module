      if ($display == 'feature' || $display == 'feature_large') {
        $nodes[$key]->heading_tag['#tag'] = 'h3';
      }
      else {
        $nodes[$key]->heading_tag['#tag'] = 'strong';
      }
    }
    // Build output.
