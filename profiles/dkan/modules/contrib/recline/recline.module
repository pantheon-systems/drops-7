/**
 * Check if a preview it's embedded or not.
 */
function recline_embedded() {
  return menu_get_item(current_path())['path'] === 'node/%/recline-embed';
}

/**
 * Check if bootstrap is already added.
 */
function is_boostrap_available() {
  global $theme;
  $themes = list_themes();
  if ($theme == 'nuboot_radix' || isset($themes[$theme]->base_themes['nuboot_radix'])) {
    return TRUE;
  }
  else {
    $re = '/bootstrap(\\.min)?\\.js/';
    $js = array_keys(drupal_add_js());
    foreach ($js as $j) {
      if (preg_match($re, $j)) {
        return TRUE;
      }
    }
    return FALSE;
  }
}

